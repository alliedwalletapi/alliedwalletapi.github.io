<layout version="0.1.0">
    <checkout_onepage_index>
        <reference name="head">
        </reference>
    </checkout_onepage_index>
    <checkout_onepage_review>
        <reference name="checkout.onepage.review.info.items.after">
            <block type="directpost/form" name="payment.form.alliedwallet3d" template="alliedwallet3d/form.phtml">
                <action method="setMethodInfo"></action>
            </block>
        </reference>
    </checkout_onepage_review>
<!--
AlliedWallet Failure Response Review
-->
<alliedwallet3d_failure>
    <reference name="root">
        <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
    </reference>
    <reference name="content">
        <block type="alliedwallet3d/failure" name="alliedwallet3d_failure" template="alliedwallet3d/failure.phtml">
        </block>
    </reference>
</alliedwallet3d_failure>

</layout>